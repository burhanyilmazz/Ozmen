$ {
    const classes = ["a-mask"];
    const attrs = input.attrs || {};

    if ( input.class ) {
        classes.push(input.class)
    }
}
<div class=classes ...attrs>
    <Image class="a-mask__masked" src=`../../assets/images/content/mask/${input.type}.png` />
    <include(input.renderBody)/>
</div>