              <Image src="../../assets/images/dummy/product/product.png" />
            </div>
            <div class="p-product-detail__choose">
              <div>50<span>kg</span></div>
              <div>25<span>kg</span></div>
              <div>05<span>kg</span></div>
            </div>
          </@GridCol>
          <@GridCol class="col-xl-7">
