      <div class="container-fluid">
        <Grid>
          <@GridCol class="col-xl-5">
            <Breadcrumb class="tablet-visible" />
            <SelectNav items=[{"text": "Hakkımızda", "value": "#", "isActive": true},{"text": "İhracat", "value": "#"},{"text": "Sosyal Sorumluluk", "value": "#"},{"text": "Sürdürülebilirlik", "value": "#"}] />

