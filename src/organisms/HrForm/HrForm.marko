<div class="hr-form">
    <h2>Başvuru Formu</h2>

    <Form>
        <Grid>
            <@GridCol class="col-lg-6">
                <FormSelect required placeholder="Pozisyon Seçin" items=[{ text: "Item", value: "0" }, { text: "Item 2", value: "1" }, { text: "Item 3", value: "2" }]  />
            </@GridCol>
        </Grid>

        <h3>Kişisel Bilgiler</h3>

        <Grid>
            <@GridCol class="col-lg-6">
                <FormInput placeholder="Adınız" required />
            </@GridCol>
            <@GridCol class="col-lg-6">
                <FormInput placeholder="Soyadınız" required />
            </@GridCol>
            <@GridCol class="col-lg-6">
                <FormInput placeholder="Mail Adresiniz" type="email" required />
            </@GridCol>
            <@GridCol class="col-lg-6">
                <FormInput placeholder="Telefon Numaranız" required />
            </@GridCol>
            <@GridCol class="col-lg-12">
                <FormTextarea attrs={"rows": "2"} placeholder="Mesajınız" />
            </@GridCol>
            <@GridCol class="col-lg-6">
                <FormFileInput required />
            </@GridCol>
            <@GridCol class="col-lg-12">
                <FormCheckbox required field="<b data-fancyId='#modal-hr'>Kişisel Verilerimin Korunması</b>’nı kabul ediyorum." />
            </@GridCol>
        </Grid>

        <Grid>
            <@GridCol class="col-lg-4">
                <Button type="button" icon="arrow-right">Gönder</Button>            
            </@GridCol>
        </Grid>
    </Form>

